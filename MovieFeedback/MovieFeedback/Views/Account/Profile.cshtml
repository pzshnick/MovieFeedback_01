@model MovieFeedback.ViewModels.ProfileViewModel

<div class="container mt-5">
    <div class="row">
        <!-- Меню зліва -->
        <div class="col-md-3">
            <div class="list-group glass-card">
                <a class="list-group-item list-group-item-action active" aria-current="true">
                    Profile Info
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="ManageMovies" class="list-group-item list-group-item-action">
                        Manage Movies
                    </a>
                    <a asp-controller="Admin" asp-action="ManageUsers" class="list-group-item list-group-item-action">
                        Manage Users
                    </a>
                }

                <button class="list-group-item list-group-item-action" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                    Change Password
                </button>
                <button class="btn btn-outline-danger w-100 mt-3" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                    Delete Account
                </button>
            </div>
        </div>

        <!-- Контент профілю справа -->
        <div class="col-md-9">
            <div class="glass-card p-4 text-white">
                <h2 class="mb-4">My Profile</h2>
                <p><strong>Username:</strong> @Model.Username</p>
                <p><strong>Email:</strong> @Model.Email</p>
            </div>
        </div>
    </div>
</div>

<!-- Модальне вікно для зміни пароля -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content login-card p-4">
            <div class="modal-header border-0">
                <h5 class="modal-title text-white" id="changePasswordModalLabel">Change Password</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="ChangePassword" asp-controller="Account">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label text-light">Current Password</label>
                        <input type="password" name="currentPassword" class="form-control login-input" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-light">New Password</label>
                        <input type="password" name="newPassword" class="form-control login-input" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-light">Confirm New Password</label>
                        <input type="password" name="confirmPassword" class="form-control login-input" required />
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-outline-light w-100 py-2">Save Changes</button>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="mt-3 text-danger text-center">
                            <strong>Something went wrong. Please try again.</strong>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content login-card p-4">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger" id="deleteAccountModalLabel">Delete Account</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="DeleteAccount" asp-controller="Account">
                    @Html.AntiForgeryToken()

                    <p class="text-light mb-3">
                        Are you sure you want to delete your account?
                        <strong>This action cannot be undone!</strong>
                    </p>
                     
                    <div class="mb-3">
                        <label class="form-label text-light">Confirm your password</label>
                        <input type="password" name="password" class="form-control login-input" required />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">Yes, Delete My Account</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

